@model BoxSubsViewModel

<div id="boxSubsTable">
    <table class="table">
        <thead>
            <tr>
                <th>Box Number</th>
                <th>Barcode</th>
                <th>Box Row</th>
                <th>Box Column</th>
                <th>Date and time added</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.BoxSubs)
            {
                <tr>
                    <td>@item.BoxNumber</td>
                    <td>@item.Barcode</td>
                    <td>@item.BoxRow</td>
                    <td>@item.BoxColumn</td>
                    <td>@item.TbldateAdded</td>
                    <td>
                        <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-info">View</a>
                        <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-primary">Edit</a>
                        <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="pagination-container flex justify-center mt-4">
    <button class="pagination-btn btn btn-secondary" data-page="@Model.CurrentPage - 1" @(Model.CurrentPage == 1 ? "disabled" : "")>Previous</button>
    <span class="mx-2">Page @Model.CurrentPage of @Model.TotalPages</span>
    <button class="pagination-btn btn btn-secondary" data-page="@Model.CurrentPage + 1" @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")>Next</button>
</div>

@model Prismproject_A.Models.ZumbaSamples

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="flex-1 bg-white p-10">
    <h1 class="text-2xl font-bold mb-4">Delete Sample</h1>
    <hr class="mb-4">

    <div class="bg-gray-100 shadow-md rounded-lg overflow-hidden">
        <div class="p-4">
            <h3 class="text-lg font-semibold text-lg mb-2">Are you sure you want to delete this sample?</h3>
            <dl class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                <div class="col-span-1">
                    <dt class="font-semibold text-lg">Box Number</dt>
                    <dd>@Html.DisplayFor(model => model.BoxNumber)</dd>
                </div>
                <div class="col-span-1">
                    <dt class="font-semibold text-lg">Barcode</dt>
                    <dd>@Html.DisplayFor(model => model.Barcode)</dd>
                </div>
                <div class="col-span-1">
                    <dt class="font-semibold text-lg">Box Row</dt>
                    <dd>@Html.DisplayFor(model => model.BoxRow)</dd>
                </div>
                <div class="col-span-1">
                    <dt class="font-semibold text-lg">Box Column</dt>
                    <dd>@Html.DisplayFor(model => model.BoxColumn)</dd>
                </div>
                <div class="col-span-1">
                    <dt class="font-semibold text-lg">Date Added</dt>
                    <dd>@Html.DisplayFor(model => model.dateAdded)</dd>
                </div>
                <div class="col-span-1">
                    <dt class="font-semibold text-lg">Round</dt>
                    <dd>@Html.DisplayFor(model => model.Round)</dd>
                </div>
            </dl>
        </div>
        <div class="p-4 bg-gray-100 border-t border-gray-200">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="inline-block px-4 py-2 bg-red-500 text-white rounded mr-2">Delete</button>
                <a href="@Url.Action("Index")" class="inline-block px-4 py-2 bg-gray-500 text-white rounded">Back to List</a>
            </form>
        </div>
    </div>
</div>

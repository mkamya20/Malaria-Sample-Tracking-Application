@model Prismproject_A.Models.ZumbaSamples

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://cdn.tailwindcss.com"></script>
<div class="flex-1 bg-white p-10">
    <h3 class="text-2xl font-semibold mb-2">Add Sample</h3>
    <hr class="mb-4" />
    <div class="flex justify-center">
        <div class="w-2/3">
            <form asp-action="Create" class="bg-gray-100 shadow-md rounded px-10 pt-6 pb-8 mb-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-4">
                    <label for="Barcode" class="block text-gray-700 text-lg font-bold mb-2">Barcode</label>
                    <input asp-for="Barcode" id="Barcode" class="form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm p-2" />
                    <span asp-validation-for="Barcode" class="text-red-500 text-xs italic"></span>
                </div>
                <div class="mb-4">
                    <label for="BoxNumber" class="block text-gray-700 text-lg font-bold mb-2">Box Number</label>
                    <input asp-for="BoxNumber" id="BoxNumber" class="form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm p-2" />
                    <span asp-validation-for="BoxNumber" class="text-red-500 text-xs italic"></span>
                </div>
                <div class="mb-4">
                    <label for="BoxRow" class="block text-gray-700 text-lg font-bold mb-2">Box Row</label>
                    <input asp-for="BoxRow" id="BoxRow" class="form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm p-2" />
                    <span asp-validation-for="BoxRow" class="text-red-500 text-xs italic"></span>
                </div>
            <div class="mb-4">
                  <label for="BoxColumn" class="block text-gray-700 text-lg font-bold mb-2">Box Column</label>
                  <input asp-for="BoxColumn" id="BoxColumn" class="form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm p-2" />
                  <span asp-validation-for="BoxColumn" class="text-red-500 text-xs italic"></span>
                </div>
            <div class="mb-4">
                  <label for="dateAdded" class="block text-gray-700 text-lg font-bold mb-2">Date Added</label>
                  <input asp-for="dateAdded" id="TbldateAdded" type="date" class="form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm p-2" />
                  <span asp-validation-for="dateAdded" class="text-red-500 text-xs italic"></span>
            </div>
            <div class="mb-4">
                 <label for="Round" class="block text-gray-700 text-lg font-bold mb-2">Round</label>
                 <input asp-for="Round" id="Round" class="form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm p-2" />
                 <span asp-validation-for="Round" class="text-red-500 text-xs italic"></span>
            </div>
                <div class="flex items-center justify-between">
                    <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                        Submit
                    </button>

                    <a href="@Url.Action("Index")" class="inline-block px-4 py-2 bg-gray-500 text-white rounded">Back to Samples</a>
                </div>
        </form>
    </div>
</div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model IEnumerable<Prismproject_A.Models.FreezerDetails>

@{
    ViewData["Title"] = "Index";
}
<div class="flex-1 bg-white p-10">
    <div id="part1" class="part-container">
        <h1 class="border-b pb-4 text-2xl font-semibold">Freezers</h1>


        <!-- Part 1 content here -->

        <div class="flex justify-between pb-1 pt-2 border-b">
            <div class="w-1/2">
                <div class="mb-4">
                    <label for="searchPart1" class="block">Search freezer:</label>
                    <div class="relative input-group">
                        <input type="text" id="searchPart1" placeholder="Search" class="form-input pr-12">
                        <button class="" style="font-size: 24px;">&#x1F50D;</button>
                    </div>
                </div>
            </div>
            <div class="w-1/2 text-right">
                <a href="/FreezerDetails/Create" class="inline-block bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Add new freezer</a>
            </div>

        </div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Freezername)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Compartment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rack)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Freezername)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Compartment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rack)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                            <a href="@Url.Action("Details", new { id = item.Id })" class="inline-block px-1 py-1 bg-yellow-500 text-white rounded hover:bg-yellow-600 focus:bg-yellow-600 focus:outline-none">View</a>
                            <a href="@Url.Action("Edit", new { id = item.Id })" class="inline-block px-1 py-1 bg-blue-500 text-white rounded hover:bg-blue-600 focus:bg-blue-600 focus:outline-none">Edit</a>
                            <a href="@Url.Action("Delete", new { id = item.Id })" class="inline-block px-1 py-1 bg-red-500 text-white rounded hover:bg-red-600 focus:bg-red-600 focus:outline-none">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>